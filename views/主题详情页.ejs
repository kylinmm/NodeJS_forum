    <script type="text/javascript" src="/javascripts/login.js"></script>
    <script type="text/javascript">
//初始化方法
function huifu(){
        if($('#pinlun').css('display')=="none"){
		$("#pinlun").css("display","block");
	}else{
		$("#pinlun").css("display","none");
	}
}
   


     //主题标题数据获取渲染
    $.ajax({
	url: "http://127.0.0.1:3000/item/Title",
	type: "POST",
	data: {
	   zhuti: '<%= zhuti %>'
	},
	success: function (data) {
        var tb = $('#Title_Header');
                $(tb).empty();
        if(data&&data.length>0){
            $.each(data, function (i, row) {
                var dateee = new Date(row.开题时间).toJSON();
                    var date=dateee.split('T')[0]; 
                $("#Title_Header").append('<div class="Header">'+
                '<div style="margin-bottom:10px;">'+
                    '<h1 style="margin-bottom:10px;">'+row.主题名+'</h1>'+
                    '<div>'+row.主题内容+'</div>'+
                '</div>'+
                '<div class="Head_Info">'+
                    '<div class="Info_item">'+
                        '<div>关注者</div>'+
                        '<strong>'+row.收藏量+'</strong>'+
                    '</div>'+
                    '<div style="float:left;width: 1px;height: 35px; background: darkgray;"></div>'+
                    '<div class="Info_item">'+
                        '<div>浏览量</div>'+
                        '<strong>'+row.浏览量+'</strong>'+
                    '</div>'+
                '</div>'+
            '</div>'+
            '<div class="Header">'+
                '<div>'+
                    '<button class="btn btn-default" \>收藏主题</button>'+
                    '<button id="answer"  class="btn btn-default" onclick="huifu()">回复主题</button>'+
                '</div>'+
                '<div style="margin-right:10px;"><strong>发表于'+date+'</strong></div>'+
            '</div>'
                );
            });
        }
	},
	error: function () {
	}
}); 

        //评论列表数据填充javascript初始化
        $('#page3').bPage({
            url: 'http://127.0.0.1:3000/item/detail',
            //开启异步处理模式
            asyncLoad: true,
            //关闭服务端页面模式
            serverSidePage: false,
            //数据自定义填充
            render: function (data) {
                var tb = $('#Title_data');
                $(tb).empty();
                if (data && data.list && data.list.length > 0) {
                    $.each(data.list, function (i, row) {
                        if(row.认证标识!=null)
                       {
                           $("#Title_data").append('<div class="Titles">'+
                '<div class="TitlesHeader">'+
                    '<div style="margin:5px;"><img style="height:35px; width:35px;" src="'+row.头像+'" class="img-rounded"></div>'+
                    '<div class="user_Info">'+
                        '<div style="margin:5px;">'+
                            '<a style="text-decoration:none;color:#333; margin:5px;" href=""><strong>'+row.用户名+'</strong></a>'+
                            '<img style="height:15px; width:15px;" src="/images/vip.png" />'+
                        '</div>'+
                        '<div style="font-size:10px; color:#CCC; margin-left:10px;">'+row.认证标识+'</div>'+
                    '</div>'+
                '</div>'+
                '<div id="data_content" style="margin-left:5px; margin-top:5px;" clsss="TitlesContent">'+
                    row.回复内容+
                '</div>'+
                '<div style="font-size:14px; color:#A9A9A9; margin-left:10px; margin-top:15px;">编辑于'+row.回复时间+'</div>'+
            '</div>');
        } else{
            $("#Title_data").append('<div class="Titles">'+
                '<div class="TitlesHeader">'+
                    '<div style="margin:5px;"><img style="height:35px; width:35px;" src="'+row.头像+'" class="img-rounded"></div>'+
                    '<div class="user_Info">'+
                        '<div style="margin:5px;">'+
                            '<a style="text-decoration:none;color:#333; margin:5px;" href=""><strong>'+row.用户名+'</strong></a>'+
                        '</div>'+
                    '</div>'+
                '</div>'+
                '<div id="data_content" style="margin-left:5px; margin-top:5px;" clsss="TitlesContent">'+
                    row.回复内容+
                '</div>'+
                '<div style="font-size:14px; color:#A9A9A9; margin-left:10px; margin-top:15px;">编辑于'+row.回复时间+'</div>'+
            '</div>');
        }
                    });
                }
            },
            params: function () {
                return {
                    zhuti: '<%= zhuti %>'
                };
            }
        });
    </script>
