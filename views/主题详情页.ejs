                <label >回复： </label>
                <div>  
                    <textarea  id="editor" type="text/plain" name="content" placeholder="请输入您的评论..." style="width:100%;height:400px;" autofocus> </textarea> 
                </div> 
                   <button id="action" type="button" class="btn btn-info">提交</button>
            </div>
            
        </div>
        <div id="Title_data" class="All_Titles">
            <div class="Titles">
                <div class="TitlesHeader">
                    <div style="margin:5px;"><img style="height:35px; width:35px;" src="/public/images/user.jpg" class="img-rounded"></div>
                    <div class="user_Info">
                        <div style="margin:5px;">
                            <a style="text-decoration:none;color:#333; margin:5px;" href=""><strong>回复账户名</strong></a>
                            <img style="height:15px; width:15px;" src="/public/images/vip.png" />
                        </div>
