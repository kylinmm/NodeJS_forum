<!DOCTYPE html>
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<title>page插件演示</title>
	<link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
	<link rel="stylesheet" href="/stylesheets/b.page.bootstrap3.css" type="text/css">
</head>
<body >

				<!-- HTML代码、服务端内容填充 -->
<div>
    <!-- 定义表格框架 -->
    <table id="dataGridTableJson" class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th class="selectColumn" >选择</th>
                <th>主题ID</th>
                <th>回复者ID</th>
                <th>回复内容</th>
                <th>回复时间</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
<div id="page3"></div>
	<script src="/javascripts/jquery-3.3.1.min.js"></script>
	<script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>
	<script type="text/javascript" src="/javascripts/b.page.js" ></script>
	<script type="text/javascript" >
	//javascript初始化
$('#page3').bPage({
    url :'http://127.0.0.1:3000/item/detail',
    //开启异步处理模式
    asyncLoad : true,
    //关闭服务端页面模式
	serverSidePage : false,
    //数据自定义填充
    render : function(data){
        var tb = $('#dataGridTableJson tbody');
		$(tb).empty();
        if(data && data.list && data.list.length > 0){
            $.each(data.list,function(i,row){
                var tr = $('<tr>');
                $(tr).append('<td></td>');
                $(tr).append('<td>'+row.主题ID+'</td>');
                $(tr).append('<td>'+row.回复者ID+'</td>');
                $(tr).append('<td>'+row.回复内容+'</td>');
                $(tr).append('<td>'+row.回复时间+'</td>');
                $(tb).append(tr);
            });             
        }
    },
    params : function(){
        return {
			zhuti:'<%= zhuti %>'
        };
    }
});
	</script>
</body>
</html>